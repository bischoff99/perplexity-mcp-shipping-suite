# Environment Configuration Template
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Application URLs
WEB_DASHBOARD_URL=http://localhost:3003
EASYPOST_MCP_URL=http://localhost:3000
VEEQO_MCP_URL=http://localhost:3002

# =============================================================================
# API KEYS AND SECRETS
# =============================================================================

# EasyPost API Configuration
# Get your API key from https://easypost.com/account/api-keys
EASYPOST_API_KEY=your_easypost_api_key_here
EASYPOST_WEBHOOK_SECRET=your_easypost_webhook_secret_here

# Veeqo API Configuration  
# Get your API key from Veeqo account settings
VEEQO_API_KEY=your_veeqo_api_key_here
VEEQO_API_URL=https://api.veeqo.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=shipping_dev
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://${POSTGRES_USERNAME}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DATABASE}

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Cache TTL (Time To Live) in seconds
CACHE_TTL=300

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Format (json, simple)
LOG_FORMAT=json

# Enable/disable specific log types
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_LOGS=true
ENABLE_PERFORMANCE_LOGS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your_jwt_secret_here_generate_a_strong_random_string

# Session Secret
SESSION_SECRET=your_session_secret_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3003,http://localhost:3000,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# AI INTEGRATION CONFIGURATION
# =============================================================================

# Claude API Configuration (optional)
# Get API key from https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here
USE_CLAUDE=false
GENERATE_CLAUDE_PROMPT=true

# Hugging Face Configuration (optional)
# Get API token from https://huggingface.co/settings/tokens
HF_API_TOKEN=your_huggingface_api_token_here
USE_HF=false
HF_MODEL_ENDPOINT=https://api-inference.huggingface.co/models/

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook endpoints for external services
EASYPOST_WEBHOOK_ENDPOINT=/webhooks/easypost
VEEQO_WEBHOOK_ENDPOINT=/webhooks/veeqo

# Webhook retry configuration
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000

# =============================================================================
# MONITORING AND METRICS
# =============================================================================

# Enable metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090

# Health check configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================

# Hot reload (development only)
ENABLE_HOT_RELOAD=true

# Debug mode
DEBUG_MODE=false

# Auto-start services in devcontainer
AUTO_START_SERVICES=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database (used during testing)
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shipping_test

# Test API keys (use test/sandbox keys)
TEST_EASYPOST_API_KEY=your_test_easypost_api_key_here
TEST_VEEQO_API_KEY=your_test_veeqo_api_key_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Port configuration (usually set by deployment platform)
PORT=3000
WEB_PORT=3003
EASYPOST_PORT=3000
VEEQO_PORT=3002

# Container configuration
CONTAINER_MEMORY_LIMIT=2g
CONTAINER_CPU_LIMIT=1

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================

# Email service (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# File upload service
UPLOAD_MAX_FILE_SIZE=10mb
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_AI_FEATURES=false

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate secrets regularly
# 4. Use different values for each environment
# 5. Store production secrets in secure secret management systems
# 6. Set up monitoring for secret access and rotation